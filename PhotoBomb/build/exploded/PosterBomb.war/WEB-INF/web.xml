<web-app version ="3.1"
                  xmls="http://xmlns.jcp.org/xml/ns/javaee"
                  xmls:xsi="http://xmlns.jcp.org/xml/ns/javaee"
                  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                  http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">   
    
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Servlets.LoginServlet</servlet-class>        
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SignUpSerlvet</servlet-name>
        <servlet-class>Servlets.SignUpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUpSerlvet</servlet-name>
        <url-pattern>/signUpServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>PostServlet</servlet-name>
        <servlet-class>Servlets.PostServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PostServlet</servlet-name>
        <url-pattern>/postServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CommentsServlet</servlet-name>
        <servlet-class>Servlets.CommentsServlet</servlet-class>        
    </servlet>
    <servlet-mapping>
        <servlet-name>CommentsServlet</servlet-name>
        <url-pattern>/commentsServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>Servlets.LogoutServlet</servlet-class>        
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logoutServlet</url-pattern>
    </servlet-mapping>
    
     <servlet>
        <servlet-name>AdminPopupServlet</servlet-name>
        <servlet-class>Servlets.AdminPopupServlet</servlet-class>        
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminPopupServlet</servlet-name>
        <url-pattern>/adminPopupServlet</url-pattern>
    </servlet-mapping>
    
     <servlet>
        <servlet-name>UpdateDeleteServlet</servlet-name>
        <servlet-class>Servlets.UpdateDeleteServlet</servlet-class>        
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateDeleteServlet</servlet-name>
        <url-pattern>/updateDeleteServlet</url-pattern>
    </servlet-mapping>


</web-app>
